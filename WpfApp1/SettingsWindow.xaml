<Window x:Class="WpfApp1.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="設定" Height="200" Width="250">
    <StackPanel Margin="10">
        <Button Content="フルスクリーン" Click="FullScreen_Click" Margin="0,5"/>
        <Button Content="ウィンドウ表示" Click="Windowed_Click" Margin="0,5"/>
        <Button Content="ウィンドウフルスクリーン" Click="PseudoFullScreen_Click" Margin="0,5"/>
        <Button Content="閉じる" Click="Close_Click" Margin="0,5"/>
    </StackPanel>
</Window>