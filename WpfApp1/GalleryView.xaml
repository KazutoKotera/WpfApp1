<UserControl x:Class="WpfApp1.GalleryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="169" Width="306">
    
    <Grid>
        <!-- アイテム表示エリア -->
        <ItemsControl x:Name="ItemGrid" Margin="10">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="3" Columns="5" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>

        <!-- ページ切り替えボタン -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,10">
            <Button Content="◀" Width="50" Click="PrevPage_Click"/>
            <Button Content="▶" Width="50" Click="NextPage_Click"/>
        </StackPanel>
        
        <Button Content="戻る" Click="Back_Click"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"/>
    </Grid>
</UserControl>

